#!/usr/bin/env ruby

require 'photo-utils'
require 'photo-utils/tools/reciprocity'
require 'photo-utils/tools/focal_length'
require 'photo-utils/tools/test'
require 'photo-utils/tools/dof_table'
require 'photo-utils/tools/dof'
require 'photo-utils/tools/compare'
require 'photo-utils/tools/blur'
require 'photo-utils/tools/film_test'
require 'photo-utils/tools/brightness'
require 'photo-utils/tools/cameras'
require 'photo-utils/tools/calc_aperture'
require 'photo-utils/tools/chart_dof'

options = {}
appname = File.basename($0)

commands = {
  'reciprocity'   => PhotoUtils::Tools::Reciprocity,
  'focal-length'  => PhotoUtils::Tools::FocalLength,
  'test'          => PhotoUtils::Tools::Test,
  'dof-table'     => PhotoUtils::Tools::DOFTable,
  'dof'           => PhotoUtils::Tools::DOF,
  'compare'       => PhotoUtils::Tools::Compare,
  'blur'          => PhotoUtils::Tools::Blur,
  'film-test'     => PhotoUtils::Tools::FilmTest,
  'brightness'    => PhotoUtils::Tools::Brightness,
  'cameras'       => PhotoUtils::Tools::Cameras,
  'calc-aperture' => PhotoUtils::Tools::CalcAperture,
  'chart-dof'     => PhotoUtils::Tools::ChartDOF,
}

cmd = ARGV.shift or raise "Usage"
cmd_class = commands[cmd] or raise "Usage"
cmd_class.new.run